<resources>
    <!--
        Android Automatically Generates two style files, However any changes which need to be applied occur in styles.xml(v21)
        The styles in this class provide alternative styles and layouts for themes.
  -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:listPreferredItemHeight">20dp</item>
        <item name="android:colorForeground">@android:color/black</item>
        <item name="colorPrimary">@color/energypantone</item>
        <item name="colorPrimaryDark">@color/pantoneheritage</item>
        <item name="colorAccent">@color/energypantone</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:colorBackground">@color/lightgrey</item>
        <item name="android:textColorSecondaryInverse">@color/lightgrey</item>
        <item name="android:windowBackground">@color/lightgrey</item>
        <item name="android:textColorPrimaryInverse">@color/lightgrey</item>
        <item name="android:textColorSecondary">@android:color/black</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>

</resources>
